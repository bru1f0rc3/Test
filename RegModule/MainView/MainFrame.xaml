<Page x:Class="RegModule.MainView.MainFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegModule.MainView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainFrame">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1"
                Content="Добавить нового пользователя"
                Width="350"
                Height="50"
                Name="AddNewUserButton"
                Click="AddNewUserButton_Click"/>
        <Button Grid.Row="2"
                Content="Просмотр всех пользователей"
                Width="350"
                Height="50"
                Name="WatchUsersButtoon"
                Click="WatchUsersButtoon_Click"/>
        <Button Grid.Row="3"
                Content="Доступ к модулям"
                Width="350"
                Height="50"
                Name="AddModuleforUserButton"
                Click="AddModuleforUserButton_Click"/>
    </Grid>
</Page>
